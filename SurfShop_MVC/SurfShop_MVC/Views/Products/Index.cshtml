@model IEnumerable<SurfShop_MVC.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-4">Products</h2>

<p class="mt-3">
        @Html.ActionLink("Create New", "Create", null, new {@class = "btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Description)
        </td>
        <td>
            
            @if(item.Image != null)
            {
                //convert the binary to base64 string
                var imageAsBase64 = Convert.ToBase64String(item.Image);

                //convert the string to image
                var convertedImage = String.Format($"data:Image/png;Base64,{imageAsBase64}");

                //place inside image html element
                <img src="@convertedImage">
            }

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Product_ID }, new {@class = "btn btn-success"})
            @Html.ActionLink("Delete", "Delete", new { id=item.Product_ID }, new { @class = "btn btn-warning" })
        </td>
    </tr>
}

</table>
