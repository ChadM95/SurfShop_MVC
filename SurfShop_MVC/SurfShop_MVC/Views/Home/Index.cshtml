@{
    ViewBag.Title = "Home Page";
}

@section styles {
        <style>
            .carousel {
                max-width:1000px;
                margin:auto;            
            }

            .carousel-item img {
                max-height: 400px;
                object-fit: cover;
            }
        </style>
    }


    <!-- Carousel -->
    <div id="demo" class="carousel slide mt-2" data-bs-ride="carousel">

        <!-- Indicators/dots -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
            <button type="button" data-bs-target="#demo" data-bs-slide-to="3"></button>
        </div>

        <!-- carousel -->
        <div class="carousel-inner">
            <div class="carousel-item">
                <img src="~/Content/shop1.jfif" class="d-block" style="width:100%">
                <div class="carousel-caption text-dark">
                    <h3>Shop</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Content/air.jpg" class="d-block" style="width:100%">
                <div class="carousel-caption">
                    <h3>Surf</h3>
                </div>
            </div>
            <div class="carousel-item active">
                <img src="~/Content/sup.jpg" class="d-block" style="width:100%">
                <div class="carousel-caption">
                    <h3>Rent</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Content/tullan3.jpg" class="d-block" style="width:100%">
                <div class="carousel-caption">
                    <h3>Explore</h3>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
<hr/>

<h4 class="mt-2">Read some of our reviews...</h4>

<div class="row">

    <div class="col">
        <div class="container mt-3">
            <blockquote class="blockquote">
                <p>
                    Nestled right in the heart of the Wild Atlantic Way <br />
                    lies a hidden gem. The MVC Surf Shop, where <br />
                    all your dreams come true!
                </p>
                <footer class="blockquote-footer">Shmlurb, Galactic Overlord</footer>
            </blockquote>
        </div>
    </div>

    <div class="col">
        <div class="container mt-3">
            <blockquote class="blockquote">
                <p>
                    This is the best Surf Shop website I have ever been to.<br />
                    I am so impressed, I have decided to donate all my money <br />
                    to the developers, and you should too!
                </p>
                <footer class="blockquote-footer">Bill Gates, Microsoft</footer>
            </blockquote>
        </div>
    </div>

</div>