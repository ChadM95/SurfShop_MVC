<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!--Bootstrap library-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap JavaScript -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</head>

<body>

    <div class="p-4 bg-primary text-white text-center">
        <h1>MVC's Surf Shop</h1>
    </div>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <ul class="nav nav-pills mx-auto">
                <li class="nav-item">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link mx-3" })
                </li>
                <li class="nav-item dropdown">
                    @Html.ActionLink("Shop", "Index", "Home", null, new { @class = "nav-link dropdown-toggle mx-3", id = "navbarDropdown",
                   style = "background-color: transparent",
                   role = "button", data_toggle = "dropdown", })
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @Html.ActionLink("Customer", "Shop", "Shop", null, new { @class = "nav-link " })
                        @Html.ActionLink("Admin", "ShopAdmin", "Shop", null, new { @class = "nav-link" })
                    </div>
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Rent", "Rent", "Rent", null, new { @class = "nav-link mx-3" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Surf", "Surf", "Surf", null, new { @class = "nav-link mx-3" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link mx-3" })
                </li>
            </ul>
        </div>
    </nav>

   

    <div class="container body-content">

        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Rad Chad Industries</p>
        </footer>
    </div>

</body>
</html>
